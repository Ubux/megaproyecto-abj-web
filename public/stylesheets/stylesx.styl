@import 'nib'

global-reset()

background-color = #222

body
html
	height 100%

body
	background-color background-color
	color #EEE
	font-family 'Arial'
	font-size 16px
	text-align center

nav
	left 0
	position fixed
	z-index 100

	ul
		list-style none
		margin 0
		opacity 0.2
		padding 0
		transition all 0.5s ease
		width 2em

		&:hover
			opacity 0.8

	li
		display inline-block

		a
			background #fff
			border-radius 0.5em
			color white
			display inline-block
			margin 0.28em 0.5em
			padding 0.3em 0.6em
			text-decoration none
			transition all 0.5s ease

			&:hover
				color black
				transform scale(1.2) rotate(5deg)
#groups
	bottom 0
	left 0
	position fixed
	transition all 0.5s ease
	text-align left
	width 100%

	#objects
		background rgba(255,255,255,0.9)
		border-radius 0.5em
		color #333
		margin 0
		padding 0.5em

		figure
			border 3px solid #ccc
			cursor pointer
			display inline-block
			margin 0.5em 0.3%
			opacity 0.7
			transition all 0.3s ease

			&:hover
				border 4px solid black
				opacity 1
				transform scale(1.1)

			img
				height 3em
				width 3em

	#tabs
		opacity 0.3

		&:hover
			opacity 0.8

		ul
			list-style none
			margin 0 0 0 0.3em
			padding 0
			transition all 0.5s ease

		li
			display inline-block
			margin 0 0 0.1em 0

			a
				background rgba(255,255,255,0.9)
				border 3px solid #ccc
				color black
				display inline-block
				text-decoration none
				transition all 0.5s ease

				&:hover
					border 4px solid black
					opacity 1
					transform scale(1.1)

				&[selected]
					font-weight bold
					border 4px solid black
					opacity 1

#workspace
	background rgba(255,255,255,0.9)
	height 87%
	width 100%

	canvas
		position relative!important